<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:buttonStyle">?android:borderlessButtonStyle</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/abc_ab_solid_light_holo</item>
    </style>
    
    <style name="AlarmDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
    	<item name="android:background">@android:color/transparent</item>
    	<item name="android:windowBackground">@android:color/transparent</item>
    	<item name="android:windowIsFloating">true</item>
    	<item name="android:backgroundDimEnabled">false</item>
    	<item name="android:windowContentOverlay">@null</item>
    	<item name="android:textColor">@color/white</item>
    </style>     
    
    <style name="actionbarText">
		<item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>    
        <item name="android:textStyle">bold</item> 
     </style>
     
    <style name="dialogTitle">
        <item name="android:textSize">18sp</item>    
        <item name="android:textStyle">bold</item> 
     </style>
     
     <style name="dialogTitle.confirm">
        <item name="android:textColor">@color/solid_red</item>
     </style>
    
    <style name="timeText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item> 
        <item name="android:textColor">@color/black</item> 
    </style>
    
    <style name="timeTextForList">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item> 
        <item name="android:textColor">@color/white</item> 
        <item name="android:background">@drawable/list_item_left_day_bg</item>
        
    </style>
    
    <style name="micro">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="normal">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="large">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="day_label">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rectangle_with_corner_red</item>
        <item name="android:padding">1dip</item>
        
    </style>
    
    <style name="widgetListItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item> 
    </style>
    
    <style name="widgetListItem.endDate">
        <item name="android:textColor">@drawable/green</item>
    </style>
    
    
    <style name="widgetTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>    
        <item name="android:textStyle">bold</item> 
     </style>
         
    <style name="listItemText">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="listItemText.widget">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="listItemLeftDay">
        <item name="android:padding">5dip</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item> 
        <item name="android:textColor">@color/white</item> 
        <item name="android:background">@drawable/list_item_left_day_bg</item>
    </style>
    
    <style name="listItemLeftDay.widget">
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="listItemLeftDayLabel" >
        <item name="android:padding">5dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item> 
        <item name="android:textColor">@color/white</item> 
        <item name="android:background">@drawable/list_item_day_label_bg</item>
    </style>
    
    <style name="listItemLeftDayLabel.widget" >
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="widget_tips">
        <item name="android:padding">7dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rectangle_with_corner_green</item>
        </style>
        
    <style name="expireText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item> 
        <item name="android:textColor">@color/orange</item> 
    </style>
    
        <style name="reminderTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>    
        <item name="android:textStyle">bold</item> 
     </style>
    
    
</resources>