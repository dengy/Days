<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
  	android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:orientation="vertical">
   <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/MyActionBar">
    
    <!--  <Button 
    android:id="@+id/add_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="5dip"
    android:background="@drawable/cancel"/>  -->

    <Button
    android:id="@+id/add_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="5dip"
    android:drawableLeft="@drawable/cancel"
    android:text="@string/cancel_label"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        style="@style/actionbarText"/>
    
    <Button
    android:id="@+id/add_ok"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="5dip"
    android:text="@string/ok_label"/>
    
    
    </RelativeLayout>  
      
    <TableLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:padding="10dip"
        android:focusable="true"  
        android:focusableInTouchMode="true" >  
   <TableRow  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"  
            android:background="@drawable/edit_row_bg_top"  
            android:padding="10dip" >  
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="right" 
        android:text="@string/title_label"
        android:paddingRight="10dip"
        android:layout_weight="0.1"/>
    <TextView
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:layout_weight="0.9"
        android:layout_span="2"/>
    </TableRow>
    <TableRow  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:background="@drawable/edit_row_bg_middle"  
            android:padding="10dip" >  
   <TextView
        android:id="@+id/priority_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right" 
        android:paddingRight="10dip"
        android:text="@string/priority_label"
        android:layout_weight="0.1"/>
    <TextView
        android:id="@+id/priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_life"
        android:layout_weight="0.9"
        android:layout_span="2"/>
    </TableRow>
    <TableRow  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:background="@drawable/edit_row_bg_middle"  
            android:padding="10dip" >  
  	<TextView
        android:id="@+id/enddate_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right" 
        android:paddingRight="10dip"
        android:text="@string/enddate_label"
        android:layout_weight="0.1"/>
    <TextView
        android:id="@+id/enddate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_underline"
        android:layout_weight="0.9"
        android:layout_span="2"/>
    </TableRow>
    <TableRow  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:background="@drawable/edit_row_bg_middle"  
            android:padding="10dip" >  
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right" 
        android:paddingRight="10dip"
        android:text="@string/top_label"
        android:layout_weight="0.1"/>

     <Switch   
       android:id="@+id/topSwitch"  
       android:layout_width="wrap_content"  
       android:layout_height="wrap_content"  
       android:textOn="是"  
       android:textOff="否"  
       android:layout_weight="0.4"/> 
  	
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right" 
        android:paddingRight="10dip"
        android:text="@string/endtime_label"
        android:layout_weight="0.1"
        android:visibility="gone"/>
  	<TextView
        android:id="@+id/endtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_underline"
        android:layout_weight="0.9"
        android:layout_span="2"
        android:visibility="gone"/>
    </TableRow>
    <TableRow  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:background="@drawable/edit_row_bg_middle"  
            android:padding="10dip"
            android:visibility="gone">  
  	<TextView
        android:gravity="right" 
        android:paddingRight="10dip"
        android:text="@string/remind_label_1"
        android:layout_weight="0.1"
        android:visibility="gone"/>
    
    <TextView
        android:id="@+id/remindFromDate"
        android:text="@string/default_underline"
        android:layout_weight="0.7"
        android:visibility="gone"/>
    
    <TextView
        android:layout_gravity="left"
        android:text="@string/remind_label_2"
        android:layout_weight="0.2"
        android:visibility="gone"/>
    </TableRow>
    <TableRow  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:background="@drawable/edit_row_bg_middle"  
            android:padding="10dip"
            android:visibility="gone">  
  	<TextView
        android:id="@+id/remind_bell_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right" 
        android:paddingRight="10dip"
        android:text="@string/remind_bell_label"
        android:layout_weight="0.1"/>
  	
  	<TextView
        android:id="@+id/reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_reminder"
        android:layout_weight="0.9"
        android:layout_span="2"/>
    
    <!-- <android.first.countdown.util.SlipButton
            android:id="@+id/remindBell"
            android:layout_width="match_parent"
            android:layout_height="30dip"/> -->
    </TableRow>
    <TableRow  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:background="@drawable/edit_row_bg_middle"  
            android:padding="10dip">  
  	<TextView
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="10dip"
        android:text="@string/remark_label"
        android:layout_weight="0.1"/>
    <EditText
        android:id="@+id/remark"
        android:singleLine="false"
        android:gravity="top"
        android:minLines="3"
   	    android:maxLines="6"
        android:lines="3"
        android:layout_width="match_parent"
        android:layout_weight="0.9"
        android:layout_span="2"/>  
    </TableRow>
    
    <TableRow  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:background="@drawable/edit_row_bg_bottom"  
            android:padding="10dip">  
  	 <Button
    android:id="@+id/delete_action"
    android:layout_width="fill_parent"
    android:layout_weight="0.1"
    android:layout_height="wrap_content"
    android:text="@string/delete_action"
    android:background="@drawable/delete_btn_bg_selector"
    android:drawableRight="@drawable/delete_icon"/>
    </TableRow>
    </TableLayout>
</LinearLayout>