<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
  	android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:orientation="vertical"> 
    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_item_bg">
    <RelativeLayout 
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"> 
    <!-- <TextView
        android:id="@+id/from_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from_1"
        android:layout_alignParentLeft="true"
        style="@style/actionbarText"/> -->
    <TextView
        android:id="@+id/topLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/top_label"
        style="@style/day_label"/>
    
    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/topLabel"
        android:layout_marginLeft="5dip"
        style="@style/normal"/>

     <!-- <TextView
        android:id="@+id/topDate_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topDate_label"
        android:layout_below="@id/topTitle"
        android:layout_alignParentLeft="true"
        style="@style/actionbarText"/> -->
     <TextView
        android:id="@+id/topDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topTitle"
        android:layout_alignParentLeft="true"
        style="@style/small"/>
     
     <TextView
        android:id="@+id/leftDay_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/days"
        android:layout_alignParentRight="true"
        android:layout_below="@id/topTitle"
        style="@style/day_label"
        android:layout_gravity="center"/>
     
     <TextView
        android:id="@+id/topLeftDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/leftDay_label"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        style="@style/large"/>
     
     <TextView
        android:id="@+id/dayStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topTitle"
        android:layout_toLeftOf="@id/topLeftDays"
        android:layout_marginRight="5dip"
        style="@style/small"/>
    
    
    
</RelativeLayout>
</FrameLayout>
