<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style = "@style/MyActionBar">
    <Button
    android:id="@+id/type_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="5dip"
    android:drawableLeft="@drawable/cancel"
    android:text="@string/cancel_label"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_type_title"
        android:gravity="center"
        android:layout_centerVertical="true"
        style="@style/actionbarText"/>    
        
    <Button
        android:id="@+id/add_type"
        android:layout_width="wrap_content"
        android:layout_marginRight="5dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/add_type_label"/>
    </RelativeLayout>   
    
    <!-- <Button
        android:id="@+id/add_type"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_height="wrap_content"
        android:text="@string/add_type_label"
        android:background="@drawable/add_type_btn_bg_selector"/> -->

     <ListView
        android:id="@+id/default_type_list"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:divider="@android:color/transparent"
        android:dividerHeight="3dip"	
        android:layout_height="wrap_content"/>
     <ListView
        android:id="@+id/custom_type_list"   
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="5dip"
        android:divider="@android:color/transparent"
    	android:dividerHeight="3dip"
        android:layout_height="wrap_content"/>

</LinearLayout>
